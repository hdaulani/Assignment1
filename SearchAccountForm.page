<apex:page controller="Ctrl_AccountSearch">
    <apex:form >
        <apex:pageBlock >
            <apex:pageBlockButtons location="top" >
                <apex:commandButton value="Search" action="{!searchAccounts}" reRender="account-table" />
            </apex:pageBlockButtons>
            <apex:pageBlockSection id="account-table" columns="1">
              
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Billing City" />
                    <apex:inputText value="{!billingCity}" />
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Billing State" />
                    <apex:inputText value="{!billingState}" />
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Billing Country" />
                    <apex:inputText value="{!billingCountry}" />
                </apex:pageBlockSectionItem>
                
                <apex:pageBlockTable value="{!accounts}" var="c">
                    <apex:column >
                        <apex:facet name="header">Name</apex:facet>
                        {!c.Name}
                    </apex:column>
                    <apex:column >
                        <apex:facet name="header">Billing City</apex:facet>
                        {!c.BillingCity}
                    </apex:column>
                    <apex:column >
                        <apex:facet name="header">Billing State</apex:facet>
                        {!c.BillingState}
                    </apex:column>
                    <apex:column >
                        <apex:facet name="header">Billing Country</apex:facet>
                        {!c.BillingCountry}
                    </apex:column>
                </apex:pageBlockTable>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>